package warrior;

public class Archer extends Warrior{
	
	protected String job = "archer";

	public Archer(String name) {
		this.name = name;
		hp += 45;
		attack += 5;
		def += 10;
		
		mp -= 45;
		speed -=10;
		evasion -=5;
		System.out.println("I am now a Archer");
	}
	
	public void display(){
		System.out.println(name+" the " +job +" has HP:"+hp+" and MP:"+mp);
		System.out.println(attack+"\n"+def+"\n");
	}

}
